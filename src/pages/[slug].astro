---
import Layout from '../layouts/Layout.astro';
import NotionRenderer from '../components/Glaze/NotionRenderer.astro';
import { getBlocks, getDatabaseContents, mapPageProperties } from "../lib/notion";
import type { NotionPage, NotionBlock } from "../types/notion";

const { slug } = Astro.params;

// 1. 전체 페이지 데이터 가져오기 및 현재 페이지 찾기
// (Notion API 효율성을 위해 리스트 조회 후 필터링 방식을 유지)
const allPagesRaw = await getDatabaseContents();
const allPosts = allPagesRaw.map(mapPageProperties);
const post = allPosts.find((p) => p.slug === slug);

// 2. 페이지가 없으면 404로 리다이렉트
if (!post) {
  return Astro.redirect('/404');
}

// 3. 본문 블록 데이터 조회
const blocks: NotionBlock[] = await getBlocks(post.id);
---

<Layout title={post.title}>
  <main class="max-w-4xl mx-auto px-6 py-20">
    {post.cover && (
      <div class="w-full h-64 md:h-96 rounded-[3rem] overflow-hidden mb-16 shadow-xl border border-slate-100 dark:border-slate-800">
        <img 
          src={post.cover} 
          alt={post.title} 
          class="w-full h-full object-cover"
        />
      </div>
    )}

    <header class="mb-16 text-center">
      <h1 class="text-4xl md:text-6xl font-black text-slate-900 dark:text-white mb-6">
        {post.title}
      </h1>
      <div class="w-20 h-1.5 bg-primary mx-auto rounded-full"></div>
    </header>

    <div class="bg-white dark:bg-slate-900 p-8 md:p-12 rounded-3xl shadow-sm border border-slate-100 dark:border-slate-800">
      <div class="notion-renderer">
          <NotionRenderer blocks={blocks} />
      </div>
    </div>
  </main>
</Layout>
