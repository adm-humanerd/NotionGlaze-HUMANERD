---
import Layout from '../layouts/Layout.astro';
import NotionRenderer from '../components/Glaze/NotionRenderer.astro';
import { getPageBySlug, getBlocks, getDatabaseContents, mapPageProperties } from "../lib/notion";

// 1. Home 데이터 가져오기 (Slug가 'home'인 페이지)
const homePageRaw = await getPageBySlug('home');
const homePage = homePageRaw ? mapPageProperties(homePageRaw) : null;
const homeBlocks = homePageRaw ? await getBlocks(homePageRaw.id) : [];

// 2. 최신 글 가져오기 (전체 데이터베이스에서 상위 3개)
const allPagesRaw = await getDatabaseContents();
const recentPosts = allPagesRaw
  .filter((p: any) => mapPageProperties(p).slug !== 'home') // home 제외
  .slice(0, 3)
  .map(mapPageProperties);
---

<Layout title="Home">
  
  {/* 1. Hero Section (제목 영역) */}
  <section class="relative bg-white pt-20 pb-12 md:pt-32 md:pb-20 overflow-hidden">
    <div class="max-w-5xl mx-auto px-6 relative z-10 text-center">
      
      <span class="inline-block py-1 px-3 rounded-full bg-slate-100 text-slate-500 text-xs font-bold uppercase tracking-wider mb-6">
        Welcome
      </span>

      <h1 class="text-4xl md:text-6xl font-black text-slate-900 leading-tight mb-8 tracking-tight whitespace-pre-wrap">
        {homePage ? homePage.title : "NotionGlaze"}
      </h1>

      <div class="flex flex-col md:flex-row items-center justify-center gap-4 mb-12">
        <a href="/blog" class="px-8 py-4 bg-primary text-white font-bold rounded-full text-lg hover:opacity-90 transition-opacity shadow-lg shadow-primary/30 w-full md:w-auto">
          블로그 보기
        </a>
      </div>
    </div>
  </section>

  {/* Notion 내용 렌더링 */}
  {homeBlocks.length > 0 ? (
    <section class="pb-20 bg-white">
        <div class="notion-renderer px-6">
             <NotionRenderer blocks={homeBlocks} />
        </div>
    </section>
  ) : (
    <div class="text-center py-20 text-slate-400">노션에서 'home' 슬러그를 가진 페이지를 작성해주세요.</div>
  )}

  {/* 2. 최신 글 섹션 */}
  {recentPosts.length > 0 && (
    <section class="py-20 bg-slate-50 border-t border-slate-200">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex items-center justify-between mb-12">
          <h2 class="text-3xl font-black text-slate-900">Recent Posts</h2>
          <a href="/blog" class="text-primary font-bold hover:underline">View all posts →</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {recentPosts.map((post: any) => (
            <a href={`/post/${post.slug}`} class="group block bg-white rounded-2xl p-4 shadow-sm hover:shadow-md transition-all border border-slate-100 h-full">
              <div class="bg-slate-50 rounded-xl overflow-hidden aspect-video mb-4 relative">
                 {post.cover ? (
                    <img src={post.cover} alt={post.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                 ) : (
                    <div class="w-full h-full flex items-center justify-center group-hover:scale-105 transition-transform duration-500">
                        <span class="text-4xl opacity-50">✍️</span>
                    </div>
                 )}
              </div>
              <h3 class="text-lg font-bold text-slate-900 mb-2 group-hover:text-primary transition-colors line-clamp-2">
                {post.title}
              </h3>
              <p class="text-sm text-slate-500">
                {new Date(post.publishedAt).toLocaleDateString()}
              </p>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>
