import { Client } from "@notionhq/client";

const { id, title } = Astro.props;

// Notion í´ë¼ì´ì–¸íŠ¸ ì´ˆê¸°í™”
const notion = new Client({ auth: import.meta.env.NOTION_API_KEY });

let items = [];

try {
  const response = await notion.databases.query({
    database_id: id,
    page_size: 12, 
  });

  items = response.results.map((page: any) => {
    const p = page.properties;
    const title = p.Name?.title?.[0]?.plain_text || p.title?.title?.[0]?.plain_text || p.Title?.title?.[0]?.plain_text || "Untitled";
    
    let cover = "";
    if (page.cover) {
        cover = page.cover.type === 'external' ? page.cover.external.url : page.cover.file.url;
    }

    // ìŠ¬ëŸ¬ê·¸ê°€ ìˆìœ¼ë©´ ë§í¬ë¥¼ ê±¸ì–´ì¤„ ìˆ˜ë„ ìˆìŠµë‹ˆë‹¤.
    const slug = p.Slug?.rich_text?.[0]?.plain_text || "";

    return { id: page.id, title, cover, slug };
  });

} catch (e) {
  console.error("Notion Gallery Fetch Error:", e);
}
